{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://qkd-app.koudaipc.com" }],
      "deny": [{ "url": "https://private.koudaipc.com" }]
    },
    "core:app:default",
    "core:app:allow-name",
    "core:app:allow-version",
    "core:path:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "dialog:allow-open",
    "fs:default",
    "os:allow-arch",
    "os:allow-family",
    "os:allow-hostname",
    "os:allow-os-type",
    "os:allow-platform",
    "os:allow-version",
    "shell:default",
    "shell:allow-open",
    "store:default",
    "system-info:allow-all",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}